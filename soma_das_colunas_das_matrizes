#include <stdio.h>

int main()
{
int matriz[4][4];
int i = 0 ;
int j = 0 ; 
int sum_col0= 0 ;int sumcol1=0 ;int sumcol2=0 ;int sumcol3=0 ;
 for (i=0 ;i<4;i++)
 {
     for (j=0;j<4;j++)
     {
        scanf("%d",&matriz[i][j]);
        printf(" ");
     }
     printf("\n");
 }
 
 for (i=0 ;i<4;i++)
 {
     for (j=0;j<4;j++)
     {
        printf("%d",matriz[i][j]);
        printf(" ");
        if (j == 0)  
        {sum_col0+= matriz[i][j];}
        else if  (j == 1)
        {sumcol1+= matriz[i][j];}
        else if  (j==2)
        {sumcol2+= matriz[i][j];}
        else if  (j==3)
        {sumcol3+= matriz[i][j];}
     }
     printf("\n");
 }
 printf("a soma dos elementos da coluna 1 é %d",sum_col0);
 printf("\n");
 printf("a soma dos elementos da coluna 2 é %d",sumcol1);
  printf("\n");
 printf("a soma dos elementos da coluna 3 é %d",sumcol2);
  printf("\n");
 printf("a soma dos elementos da coluna 4 é %d",sumcol3);
  printf("\n");

 
}
