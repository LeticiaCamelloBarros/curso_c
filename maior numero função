/******************************************************************************
crie um código que usa função para guardar numa variável o resultado da verificação de qual dos 4 numeros é o maior  

*******************************************************************************/
#include <stdio.h>

int achar_maior_num (int x, int y, int z , int w)
{
  int numero_maior ;
  if( x > z && x > w && x > y  )
  {
      numero_maior = x ;
  }
  else if( z > x && z > w && z > y )
  {
      numero_maior = z;
  }
  else if( w > x && w > y && w > z )
  {
      numero_maior = w ;
  }
  else if (y > w && y > z && y > x )
  {
      numero_maior = y;
  }
  return numero_maior;
}
int main()

{
	int n1, n2,n3 ,n4 ,maior_n;
	printf("insira o primeiro numero :");
	scanf("%d",&n1);
	printf("insira o segundo  numero :");
	scanf("%d",&n2);
	printf("insira o terceiro  numero :");
	scanf("%d",&n3);
	printf("insira o quarto  numero :");
	scanf("%d",&n4);
	

	maior_n = achar_maior_num(n1,n2,n3,n4);
	printf("O maior número é :  %d",maior_n);
